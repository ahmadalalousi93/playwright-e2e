{
  "name": "playwright-e2e",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ff": "playwright test --project=firefox --headed",
    "report": "playwright show-report",
    "bdd": "cucumber-js",
    "bdd:ff": "BROWSER=firefox cucumber-js",
    "bdd:cr": "BROWSER=chromium cucumber-js",
    "bdd:wk": "BROWSER=webkit cucumber-js",
    "bdd:report": "open ./bdd-report/report.html || xdg-open ./bdd-report/report.html || start ./bdd-report/report.html"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@cucumber/cucumber": "^12.2.0",
    "@playwright/test": "^1.55.0",
    "@types/node": "^24.3.3",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-playwright": "^2.2.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "playwright": "^1.55.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "playwright-core": "^1.55.0",
    "typescript": "^5.9.2"
  },
  "description": ""
}
